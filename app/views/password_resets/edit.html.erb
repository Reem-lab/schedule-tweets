<h2> Edit your password </h2>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form|%>
 <% if @user.errors.any? %>
 <div class="alert alert-danger">
   <%= @user.errors.full_messages.each do |message| %>
      <div> <% message %></div>
   <% end %>
 </div>
 <% end %>
<div class="mb-3">
<% form.label :password%>
 <%= form.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-3">
<% form.label :confirm_password %>
 <%= form.password_field :password, class: "form-control", placeholder: "confirm password" %>
</div>
<div class="mb-3">
 <%= form.submit "Edit password", class: "btn btn-primary" %>
</div>
<% end %>