<h2> Sign in </h2>

<%= form_with url: sign_in_path do |form|%>

<div class="mb-3">
<% form.label :email%>
 <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com" %>
</div>
<div class="mb-3">
<% form.label :password%>
 <%= form.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-3">
 <%= form.submit "Sign in", class: "btn btn-primary"  %>
</div>
<% end %>